{
  "name": "waf-demo",
  "version": "1.0.0",
  "description": "Demo of setting up a WAF using CDK's TypeScript API",
  "main": "Main.ts",
  "author": "Ross Jenkins",
  "license": "MIT",
  "scripts": {
    "build": "yarn checks && yarn graphql:merge && yarn synth",
    "checks": "yarn lint && yarn test",
    "lint": "yarn eslint --max-warnings=0 \"**/*.ts\"",
    "test": "echo 'Test's skipped for now as we don't have any, to reactivate replace echo with just `jest`'",
    "synth": "yarn cdk synth --verbose",
    "deploy": "yarn cdk deploy",
    "destroy": "yarn cdk destroy",
    "diff": "yarn cdk diff",
    "watch": "yarn cdk watch",
    "codegen": "yarn graphql-codegen --config ./src/config/graphql-codegen.yml"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.21.1",
    "constructs": "^10.0.125",
    "typescript": "^4.6.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript-resolvers": "^2.6.1",
    "@types/aws-lambda": "^8.10.95",
    "@types/node": "^17.0.25",
    "graphql": "^16.3.0",
    "ts-node": "^10.7.0"
  }
}
